<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="BlocklyVerticalTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="RaisedButtonDark" parent="Theme.AppCompat.Light">
        <item name="colorButtonNormal">@drawable/rounded_button</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="EditTextYellow" parent="Theme.AppCompat">
        <item name="android:textColorHint">@color/editTextHint</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColorPrimary">@color/colorChangeET</item>
        <item name="colorAccent">@color/colorChangeET</item>
        <item name="colorControlNormal">@color/editTextHint</item>
        <item name="colorControlActivated">@color/colorChangeET</item>
    </style>

</resources>