<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="@color/main_red" />
            <gradient android:angle="-90" android:startColor="#ff2a71" android:endColor="@color/main_yellow"  />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#ff6699" />
            <solid android:color="#ff6699"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle"  >
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="@color/main_yellow" />
            <gradient android:angle="-90" android:startColor="@color/main_yellow" android:endColor="@color/main_yellow" />
        </shape>
    </item>
</selector>