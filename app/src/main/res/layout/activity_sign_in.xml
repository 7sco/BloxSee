<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_green"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/exit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="X"
        android:textAlignment="textEnd"
        android:textSize="30sp"
        android:visibility="gone" />

    <FrameLayout
        android:id="@+id/loginContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/bloxseebackground">

            <com.airbnb.lottie.LottieAnimationView
                android:id="@+id/lottieAnimationView"
                android:layout_width="500dp"
                android:layout_height="500dp"
                android:layout_centerInParent="true"
                android:background="@color/main_green"
                app:lottie_autoPlay="true"
                app:lottie_fileName="splashred.json" />

            <Button
                android:id="@+id/studentBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/bloxsee_icon"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp"
                android:background="@drawable/rounded_button_blue"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="Student"
                android:theme="@style/RaisedButtonDark" />

            <ImageView
                android:id="@+id/bloxsee_icon"
                android:layout_width="250dp"
                android:layout_height="250dp"
                android:layout_centerInParent="true"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/bloxseeicon4" />


            <Button
                android:id="@+id/teacherBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_alignEnd="@+id/studentBtn"
                android:layout_below="@+id/bloxsee_icon"
                android:layout_gravity="center"
                android:background="@drawable/rounded_button"
                android:gravity="center"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="Teacher"
                android:theme="@style/RaisedButtonDark" />


        </RelativeLayout>

    </FrameLayout>

</LinearLayout>
