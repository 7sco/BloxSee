<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/navybackground"
    tools:context="com.example.franciscoandrade.bloxsee.views.StudentActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:id="@+id/signOutStudent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGN OUT"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="end"/>
        <ImageView
            android:id="@+id/student_avatar"
            android:paddingTop="40dp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/newbloxseeicon"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/student_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="@string/student_name_textview"
            android:textAlignment="center"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/student_questions_rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layoutAnimation="@anim/layout_animation_fall_down"
            >

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>
</LinearLayout>

