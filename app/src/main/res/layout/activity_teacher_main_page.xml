<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.franciscoandrade.bloxsee.views.teacher.TeacherMainPageActivity">

    <include layout="@layout/actionbar_toolbar" />

    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_teacher"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <FrameLayout
            android:id="@+id/fragment_container_teacher"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
        </FrameLayout>

    </android.support.v4.view.ViewPager>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_gravity="bottom"
        android:src="@drawable/shadow_three"/>

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_nav_teacher"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        app:itemIconTint="@color/bnv_tab_item_foreground"
        app:itemTextColor="@color/bnv_tab_item_foreground"
        android:layout_gravity="start"
        app:menu="@menu/teacher_navigation_items">


    </android.support.design.widget.BottomNavigationView>
</LinearLayout>
