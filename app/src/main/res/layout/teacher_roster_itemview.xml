<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="3dp"
        android:layout_height="8dp"
        android:background="@color/editTextHint"
        android:layout_marginLeft="8dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="0.03"
            android:layout_marginLeft="5dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="3dp"
                android:layout_height="20dp"
                android:background="@color/editTextHint"
                android:layout_gravity="center"/>

            <ImageView
                android:id="@+id/dot_item"
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:paddingBottom="-5dp"
                android:layout_gravity="start"
                android:paddingTop="-5dp"
                android:src="@drawable/ic_dot"
                android:tint="#436a91" />

            <TextView
                android:id="@+id/bottomLine"
                android:layout_width="3dp"
                android:layout_height="20dp"
                android:background="@color/editTextHint"
                android:layout_gravity="center"/>

        </LinearLayout>


        <TextView
            android:layout_width="10dp"
            android:layout_height="2dp"
            android:gravity="center"
            android:background="@color/editTextHint"
            android:layout_gravity="center"/>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="#FFF4F4F4"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/student_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:textColor="@color/colorBlack"
                android:text="@string/joanne_song"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/student_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"

                android:text="Dragon"
                android:textColor="#0A4C8C"
                android:textSize="15sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="0.3">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/dragon"
                app:civ_border_color="@color/white"
                app:civ_border_width="5dp" />

        </LinearLayout>

    </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginRight="0.5dp"
                android:layout_marginLeft="0.5dp"
                android:layout_gravity="bottom"
                android:src="@drawable/shadow_two"/>

        </FrameLayout>


    </LinearLayout>

</LinearLayout>


