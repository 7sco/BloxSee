<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/navybackground"
    tools:context="com.example.franciscoandrade.bloxsee.views.StudentSignInFragment">

    <TextView
        android:id="@+id/choose_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="60dp"
        android:text="Choose Your Name"
        android:layout_marginStart="30dp"
        android:textColor="@color/white" />

    <Spinner
        android:id="@+id/spinnerNames"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/choose_name"
        android:layout_below="@+id/choose_name"
        android:layout_marginTop="13dp"
        android:backgroundTint="@android:color/white"
        android:clickable="true"
        android:spinnerMode="dropdown"></Spinner>

    <TextView
        android:id="@+id/passwordtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/choose_name"
        android:layout_below="@+id/spinnerNames"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="5dp"
        android:text="Choose Your Image"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <ImageView
        android:id="@+id/penguin"
        android:layout_width="@dimen/animal_image_width"
        android:layout_height="@dimen/animal_image_height"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/passwordtext"
        android:layout_marginStart="78dp"
        android:layout_marginTop="13dp"
        android:onClick="onClick"
        android:src="@drawable/penguin" />

    <ImageView
        android:id="@+id/ghost"
        android:layout_width="@dimen/animal_image_width"
        android:layout_height="@dimen/animal_image_height"
        android:layout_alignTop="@+id/penguin"
        android:layout_toEndOf="@+id/penguin"
        android:src="@drawable/ghost" />

    <ImageView
        android:id="@+id/dog"
        android:layout_width="@dimen/animal_image_width"
        android:layout_height="@dimen/animal_image_height"
        android:layout_alignTop="@+id/ghost"
        android:layout_toEndOf="@+id/ghost"
        android:src="@drawable/dog" />

    <ImageView
        android:id="@+id/cat"
        android:layout_width="@dimen/animal_image_width"
        android:layout_height="@dimen/animal_image_height"
        android:layout_alignStart="@+id/dog"
        android:layout_below="@+id/dog"
        android:src="@drawable/cat" />

    <ImageView
        android:id="@+id/dragon"
        android:layout_width="@dimen/animal_image_width"
        android:layout_height="@dimen/animal_image_height"
        android:layout_alignStart="@+id/penguin"
        android:layout_below="@+id/ghost"
        android:src="@drawable/dragon" />

    <ImageView
        android:id="@+id/octopus"
        android:layout_width="@dimen/animal_image_width"
        android:layout_height="@dimen/animal_image_height"
        android:layout_alignTop="@+id/cat"
        android:layout_toEndOf="@+id/dragon"
        android:src="@drawable/octopus" />

    <Button
        android:id="@+id/studentLogInBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dragon"
        android:layout_marginTop="23dp"
        android:layout_toStartOf="@+id/cat"
        android:background="@color/main_green"
        android:text="@string/student_fragment_login"
        android:textColor="@color/white" />

    <CheckBox
        android:id="@+id/remeber_checkBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/studentLogInBtn"
        android:layout_alignTop="@+id/studentLogInBtn"
        android:layout_marginTop="60dp"
        android:buttonTint="@color/main_yellow"
        android:text="Remember"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/not_a_student"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/studentLogInBtn"
        android:layout_below="@+id/remeber_checkBox"
        android:layout_marginTop="22dp"
        android:text="Not a student"
        android:textColor="@color/white" />



</RelativeLayout>
