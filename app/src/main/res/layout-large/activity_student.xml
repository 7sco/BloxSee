<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/navybackground"
    tools:context="com.example.franciscoandrade.bloxsee.views.StudentActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/signOutStudent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SIGN OUT"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="40dp"
            android:layout_gravity="end"/>

        <ImageView
            android:id="@+id/student_avatar"
            android:paddingTop="40dp"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/newbloxseeicon"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="-10dp"/>

        <LinearLayout
            android:id="@+id/student_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <TextView
            android:id="@+id/student_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="26sp"
            android:text="@string/student_name_textview"
            android:textAlignment="center"
            android:paddingBottom="20dp"
            android:paddingTop="20dp"/>

        <TextView
            android:id="@+id/student_lesson_one"
            android:layout_marginTop="32dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_button"
            android:layout_marginBottom="8dp"
            android:textColor="@color/white"
            android:text="Lesson 1: "
            android:textSize="23dp"
            android:padding="8dp"
            android:visibility="visible"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/student_questions_rv2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">
        </android.support.v7.widget.RecyclerView>

        <TextView
            android:id="@+id/student_lesson_two"
            android:layout_marginTop="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:padding="8dp"
            android:background="@drawable/rounded_button"
            android:text="Lesson 2: "
            android:layout_marginBottom="8dp"
            android:textSize="23dp"
            android:visibility="gone"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/student_questions_rv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp">
        </android.support.v7.widget.RecyclerView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>

